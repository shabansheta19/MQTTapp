<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shaban.mqttapp.fragments.HelloByeFragment">


    <TextView
        android:text="Send Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="59dp"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/helloTextView" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:id="@+id/helloSwitch"
        android:layout_alignBaseline="@+id/helloTextView"
        android:layout_alignBottom="@+id/helloTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Send Bye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helloSwitch"
        android:layout_alignLeft="@+id/helloTextView"
        android:layout_alignStart="@+id/helloTextView"
        android:layout_marginTop="65dp"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/byeTextView" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/byeTextView"
        android:layout_alignRight="@+id/helloSwitch"
        android:layout_alignEnd="@+id/helloSwitch"
        android:id="@+id/byeSwitch" />
</RelativeLayout>
